    <xs:attribute name="to" type="xs:string" />
    <xs:attribute name="begin" type="xs:int" />
    <xs:attribute name="duration" type="xs:int" />
    <xs:attribute name="repeat" type="repeatType" />
    <xs:attribute name="autoReverse" type="xs:boolean" />
    <xs:attribute name="mode" type="animationModeType" />
  </xs:complexType>

