<?xml version="1.0"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

  <!-- simple types -->
  <xs:simpleType name="normalizedPairType">
    <xs:restriction>
      <xs:simpleType>
        <xs:list itemType="xs:float" />
      </xs:simpleType>
      <xs:minLength value="1" />
      <xs:maxLength value="2" />
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="normalizedRectType">
    <xs:restriction>
      <xs:simpleType>
        <xs:list itemType="xs:float" />
      </xs:simpleType>
      <xs:minLength value="1" />
      <xs:maxLength value="4" />
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="pathType">
    <xs:restriction base="xs:string" />
  </xs:simpleType>

  <xs:simpleType name="colorType">
    <xs:union>
      <xs:simpleType>
        <xs:restriction base="xs:hexBinary">
          <xs:minLength value="3" />
          <xs:maxLength value="4" />
        </xs:restriction>
      </xs:simpleType>
      <xs:simpleType>
        <xs:restriction base="xs:string" />
      </xs:simpleType>
    </xs:union>
  </xs:simpleType>

  <xs:simpleType name="repeatType">
    <xs:union>
      <xs:simpleType>
        <xs:restriction base="xs:string">
          <xs:enumeration value="forever" />
          <xs:enumeration value="" />
        </xs:restriction>
      </xs:simpleType>
      <xs:simpleType>
        <xs:restriction base="xs:int" />
      </xs:simpleType>
    </xs:union>
  </xs:simpleType>


  <!-- enumerations -->
  <xs:simpleType name="directionType">
    <xs:restriction base="xs:string">
      <xs:enumeration value="vertical" />
      <xs:enumeration value="horizontal" />
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="horizontalAlignmentType">
    <xs:restriction base="xs:string">
      <xs:enumeration value="left" />
      <xs:enumeration value="right" />
      <xs:enumeration value="center" />
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="verticalAlignmentType">
    <xs:restriction base="xs:string">
      <xs:enumeration value="top" />
      <xs:enumeration value="bottom" />
      <xs:enumeration value="center" />
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="imageSourceType">
    <xs:restriction base="xs:string">
      <xs:enumeration value="image" />
      <xs:enumeration value="thumbnail" />
      <xs:enumeration value="marquee" />
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="scrollBarAlignmentType">
    <xs:restriction base="xs:string">
      <xs:enumeration value="left" />
      <xs:enumeration value="top" />
      <xs:enumeration value="reversed" />
      <xs:enumeration value="outer" />
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="centerSelectionType">
    <xs:restriction base="xs:string">
      <xs:enumeration value="true" />
      <xs:enumeration value="partial" />
      <xs:enumeration value="false" />
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="selectionModeType">
    <xs:restriction base="xs:string">
      <xs:enumeration value="full" />
      <xs:enumeration value="image" />
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="imageSizeModeType">
    <xs:restriction base="xs:string">
      <xs:enumeration value="maxSize" />
      <xs:enumeration value="minSize" />
      <xs:enumeration value="size" />
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="autoScrollType">
    <xs:restriction base="xs:string">
      <xs:enumeration value="horizontal" />
      <xs:enumeration value="vertical" />
      <xs:enumeration value="none" />
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="effectType">
    <xs:restriction base="xs:string">
      <xs:enumeration value="slideRight" />
      <xs:enumeration value="size" />
      <xs:enumeration value="bump" />
      <xs:enumeration value="none" />
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="carouselTypeType">
    <xs:restriction base="xs:string">
      <xs:enumeration value="horizontal" />
      <xs:enumeration value="vertical" />
      <xs:enumeration value="horizontal_wheel" />
      <xs:enumeration value="vertical_wheel" />
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="logoAlignmentType">
    <xs:restriction base="xs:string">
      <xs:enumeration value="top" />
      <xs:enumeration value="bottom" />
      <xs:enumeration value="center" />
      <xs:enumeration value="left" />
      <xs:enumeration value="right" />
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="defaultTransitionType">
    <xs:restriction base="xs:string">
      <xs:enumeration value="instant" />
      <xs:enumeration value="fade" />
      <xs:enumeration value="slide" />
      <xs:enumeration value="fade &amp; slide" />
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="animationPropertyType">
    <xs:restriction base="xs:string">
      <xs:enumeration value="pos" />
      <xs:enumeration value="size" />
      <xs:enumeration value="x" />
      <xs:enumeration value="y" />
      <xs:enumeration value="w" />
      <xs:enumeration value="h" />
      <xs:enumeration value="scale" />
      <xs:enumeration value="scaleOrigin" />
      <xs:enumeration value="color" />
      <xs:enumeration value="opacity" />
      <xs:enumeration value="rotation" />
      <xs:enumeration value="rotationOrigin" />
      <xs:enumeration value="zIndex" />
      <xs:enumeration value="offsetX" />
      <xs:enumeration value="offsetY" />
      <xs:enumeration value="margin" />
      <xs:enumeration value="padding" />
      <xs:enumeration value="clipRect" />
      <xs:enumeration value="maxSize" />
      <xs:enumeration value="minSize" />
      <xs:enumeration value="origin" />
      <xs:enumeration value="colorEnd" />
      <xs:enumeration value="reflexion" />
      <xs:enumeration value="roundCorners" />
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="animationModeType">
    <xs:union>
      <xs:simpleType>
        <xs:restriction base="xs:string">
          <xs:enumeration value="Linear" />
          <xs:enumeration value="EaseIn" />
          <xs:enumeration value="EaseInCubic" />
          <xs:enumeration value="EaseInQuint" />
          <xs:enumeration value="EaseOut" />
          <xs:enumeration value="EaseOutCubic" />
          <xs:enumeration value="EaseOutQuint" />
          <xs:enumeration value="EaseInOut" />
          <xs:enumeration value="Bump" />
        </xs:restriction>
      </xs:simpleType>
      <xs:simpleType>
        <xs:restriction base="xs:string">
          <xs:pattern value="[Ll]inear" />
          <xs:pattern value="[Ee]ase[Ii]n" />
          <xs:pattern value="[Ee]ase[Ii]n[Cc]ubic" />
          <xs:pattern value="[Ee]ase[Ii]n[Qq]uint" />
          <xs:pattern value="[Ee]ase[Oo]ut" />
          <xs:pattern value="[Ee]ase[Oo]ut[Cc]ubic" />
          <xs:pattern value="[Ee]ase[Oo]ut[Qq]uint" />
          <xs:pattern value="[Ee]ase[Ii]n[Oo]ut" />
          <xs:pattern value="[Bb]ump" />
        </xs:restriction>
      </xs:simpleType>
    </xs:union>
  </xs:simpleType>

  <xs:simpleType name="eventType">
    <xs:restriction base="xs:string">
      <xs:enumeration value="activate" />
      <xs:enumeration value="activateNext" />
      <xs:enumeration value="activatePrev" />
      <xs:enumeration value="open" />
      <xs:enumeration value="deactivate" />
      <xs:enumeration value="deactivateNext" />
      <xs:enumeration value="deactivatePrev" />
    </xs:restriction>
  </xs:simpleType>




  <!-- reused attribute groups -->
  <xs:attributeGroup name="filterAttributeGroup">
    <xs:attribute name="region" type="xs:string" />
