    <xs:attribute name="subSetDisplayName" type="xs:string" />
    <xs:attribute name="appliesTo" type="xs:string" />
  </xs:attributeGroup>

  <!-- complex types -->
  <xs:complexType name="variablesType">
    <xs:sequence maxOccurs="unbounded">
      <xs:any processContents="lax" />
    </xs:sequence>
    <xs:attributeGroup ref="filterAttributeGroup" />
  </xs:complexType>

  <xs:complexType name="includeType">
    <xs:simpleContent>
      <xs:extension base="pathType">
        <xs:attributeGroup ref="filterAttributeGroup" />
        <xs:attributeGroup ref="subsetAttributeGroup" />
      </xs:extension>
    </xs:simpleContent>
  </xs:complexType>

  <xs:complexType name="subsetType">
    <xs:choice minOccurs="0" maxOccurs="unbounded">
      <xs:element name="include" type="includeType" />
    </xs:choice>
    <xs:attributeGroup ref="filterAttributeGroup" />
    <xs:attributeGroup ref="subsetAttributeGroup" />
  </xs:complexType>

  <xs:complexType name="animationType">
    <xs:attribute name="property" type="animationPropertyType" use="required" />
